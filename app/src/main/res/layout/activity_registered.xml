<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registered"
    android:orientation="vertical"
    android:background="#C0C0C0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yang.com.library_system.ui.RegisteredActivity">
<include layout="@layout/head_text_view"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#C0C0C0"
        android:layout_height="match_parent"
        app:elevation="3dp"
        app:cardCornerRadius="4dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <EditText
                android:maxLength="10"
                android:id="@+id/registered_username"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入注册账号(字母与数字)"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:background="@drawable/edit_text_selector"
                android:maxLines="1"/>
            <EditText
                android:maxLength="10"
                android:id="@+id/registered_password"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:textSize="25sp"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入注册密码(字母与数字)"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_selector"
                android:maxLines="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                android:id="@+id/registered_is_ok"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:text="注册"
                android:background="@drawable/button_focused"
                android:layout_height="wrap_content" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/registered_is_back"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="25sp"
                    android:layout_width="0dp"
                    android:text="返回"
                    android:background="@drawable/button_focused"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
